program-2:
**********

#include <iostream>
using namespace std;

float calculator(float fvalue,float svalue,char symbol){
    float total;
    if(symbol ==  '+'){
        total = fvalue + svalue;
    }
    else if (symbol == '-'){
        total = fvalue - svalue;
    }
    else if(symbol == '*'){
        total = fvalue * svalue;
    }
    else if(symbol == '/'){
        total = fvalue / svalue;
    }
    
    return total;
}

int main() {
    char symbol = '$';
   float result;
   if(symbol != '+' || '-' || '*' || '/'){
       cout<<"Invalid Symbol";
   }
   else{
       result = calculator(5.5,5,symbol);
       cout << result;
   }
   

    return 0;
}

