program -3:
***********

#include <iostream>
using namespace std;

float calculator(float fvalue,float svalue,char symbol){
    float total;
    if(symbol ==  '+'){
        total = fvalue + svalue;
    }
    else if (symbol == '-'){
        total = fvalue - svalue;
    }
    else if(symbol == '*'){
        total = fvalue * svalue;
    }
    else if(symbol == '/'){
        total = fvalue / svalue;
    }
    
    return total;
}

int main() {
    char symbol = '+';
   float result;
   if(symbol == '+' || symbol == '-' || symbol == '*' || symbol == '/'){ 
       result = calculator(5.5,0.5,symbol);
       cout << result;
   }
   else{
       cout<<"Invalid Symbol";
   }
    return 0;
}
